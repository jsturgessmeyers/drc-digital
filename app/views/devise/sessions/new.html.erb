<% @bg_url = '../images/home-bg2.jpg' %>
<%= render 'layouts/bg_img' %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="jumbotron jumbo-clear jumbo-form text-center vertical-center">
    <div class="container">
      <h1>Sign in</h1>
      <form role="form">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :class => "input-field", :placeholder => "Email" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :class => "input-field", :placeholder => "Password" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Log in', class: "btn btn-clear" %>
          <%= link_to 'Cancel', etemplates_path, :class => "btn btn-link" %>
        </div>
      </form>
    </div>
  </div>
<% end %>
